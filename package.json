{
  "name": "discourse-plugin",
  "version": "0.0.1",
  "description": "NEAR + Discourse bridge for every-plugin runtimes",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./contract": {
      "types": "./dist/contract.d.ts",
      "import": "./dist/contract.js",
      "default": "./dist/contract.js"
    }
  },
  "type": "module",
  "license": "MIT",
  "keywords": [
    "discourse",
    "near",
    "every-plugin",
    "plugin",
    "forum",
    "orpc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neargov/discourse-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/neargov/discourse-plugin/issues"
  },
  "homepage": "https://github.com/neargov/discourse-plugin#readme",
  "peerDependencies": {
    "every-plugin": "^0.4.17",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@effect/language-service": "^0.41.1",
    "@module-federation/node": "^2.7.17",
    "@rspack/cli": "^1.5.2",
    "@rspack/core": "^1.5.2",
    "@types/node": "^24.6.0",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "^17.2.2",
    "every-plugin": "^0.4.17",
    "msw": "^2.3.0",
    "sirv": "^3.0.2",
    "vitest": "^3.2.4",
    "zephyr-rspack-plugin": "^0.0.59"
  },
  "scripts": {
    "build": "rspack build && tsc -p tsconfig.build.json",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "dev": "rspack serve",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "near-sign-verify": "^0.4.3"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
